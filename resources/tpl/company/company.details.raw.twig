<legend>Allgemeines</legend>
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>{{ company.getName() | e }}</dd>
            
            <dt>Id</dt>
            <dd>{{ company.getId() | e }}</dd>
            
            <dt>Kategorie</dt>
            <dd>{{ company.getCategory() | e }}</dd>
            
            <dt>Betriebsleiter</dt>
            <dd>
                <ul>
                    {% for chief in company.chiefs %}
                        <li>{{ chief.lastName }}, {{ chief.firstName }} ({{ chief.class.getFullClass() }})</li>
                    {% endfor %}
                </ul>
            </dd>
            
            <dt>Beschreibung</dt>
            <dd>{{ company.description | raw }}</dd>
        </dl>

        {% if members %}
        <legend>Angestellte</legend>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Nachname</th>
                    <th>Vorname</th>
                    <th>Klasse</th>
                </tr>
            </thead>
            <tbody>
            {% for member in members %}
                <tr>
                    <td>{{ member.lastName | e }}</td>
                    <td>{{ member.firstName | e }}</td>
                    <td>{{ member.class.getFullClass() | e }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <ul>

        </ul>
        {% endif %}

        {% if company.room or company.needs %}
        <legend>Sonstiges</legend>
        
            {% if company.room %}
            <dt>Raumwunsch</dt>
            <dd>{{ company.room }}</dd>
            {% endif %}
            
            {% if company.needs %}
            <dt>Ben&ouml;tigte Waren</dt>
            <dd>{{ company.needs | raw }}</dd>
            {% endif %}
        {% endif %}
