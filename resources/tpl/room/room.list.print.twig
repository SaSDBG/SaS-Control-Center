{% extends 'print/print.twig' %}

{% block content %}
<div class="row">
    <div class="span12">
        <table class="table">
            <thead>
                <tr>
                    <th>Betriebs-Id</th>
                    <th>Betrieb</th>
                    <th>Raum</th>
                </tr>
            </thead>
            <tbody>
            {% for company in companies %}
                    <tr>
                        <td>{{ company.id }}</td>
                        <td>{{ company.name }}</td>
                        <td>{{ company.room }}</td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
