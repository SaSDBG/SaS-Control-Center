{% extends 'base.default.html.twig' %}

{% block content %}
<div class="row">
    <h1><i class="icon-warning-sign"></i> Sicherheitsabfrage</h1>
</div>

<div class="row">
    <p>Soll der Betrieb wirklich gelöscht werden?</p>

    <form method="post">
        <label class="checkbox">
            {{ form_widget(form.sure) }} Ja, ich bin mir sicher
        </label>
        {{ form_rest(form) }}    
        <p><button type="submit" name="submit" class="btn btn-primary"><i class="icon-trash"></i> Unwiderruflich löschen</button></p>
    </form>   
    </div>

{% endblock %}