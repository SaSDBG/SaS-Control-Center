<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>SMV SaS CP &#150; {{ title|e }}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="{{ app.request.baseUrl }}/favicon.png" type="image/png">

    <link rel="stylesheet" href="{{ app.request.baseUrl }}/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ app.request.baseUrl }}/assets/css/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="{{ app.request.baseUrl }}/assets/css/main.css">
    <link rel="stylesheet" href="{{ app.request.baseUrl }}/assets/css/font-awesome.min.css">

    {% block css %}
    {% endblock %}

        <script src="{{ app.request.baseUrl }}/assets/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    {% block header %}
    {% endblock %}
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
        <![endif]-->
        <div id="wrap">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="{{ url('home') }}">SMV SaS Panel</a>
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                <li {{ macros.activeNav('home') }}><a href="{{ url('home') }}">Home</a></li>                          
                                {% block navbar_left %} 
                                {% endblock %}

                                {% block nav_main_dropdown %}
                                {% endblock %}
                            </ul>
                            <ul class="nav pull-right">
                                {% block navbar_right %} 
                                {% endblock %}   
                                <li class="divider-vertical"></li>
                                {% block nav_user_dropdown %}
                                {% endblock %}
                            </ul>
                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>
            <div class="container">
            {% block content %}
            {% endblock %}
            </div>
            {% block sidebar_nav %}
            {% endblock %}
            <div id="push"></div>
        </div>
        <div id="footer">
            <div class="container">
                <p class="muted credit">&copy; devMX 2013 <em>All rights reserved.</em></p>
            </div>
        </div>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ app.request.baseUrl }}/assets/js/vendor/jquery.min.js"><\/script>')</script>

    <script src="{{ app.request.baseUrl }}/assets/js/vendor/bootstrap.min.js"></script>
        <script src="{{ app.request.baseUrl }}/assets/js/main.js"></script>

        <script>
            var baseUrl = "{{ app.request.baseUrl }}";
        </script>

    {% block js %}
    {% endblock %}

    {% block footer %}
    {% endblock %}
    </body>
</html>